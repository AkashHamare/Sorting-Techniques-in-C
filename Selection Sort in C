#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void selectionsort(int a[],int n)
{
int pos,min,i,j;
for(i=0;i<n-1;i++)
{
    min=a[i];
    pos=i;
    for(j=i+1;j<n;j++)
    {
        if(a[j]<min)
        {
            min=a[j];
            pos=j;
        }

    }
    a[pos]=a[i];
    a[i]=min;
}
}

void main()
{
	FILE *fp,*p;
	int *x,i,n,a;
	clock_t start,end;
	double time;
	printf("Enter the number of elements : ");
	scanf("%d",&n);
	x=(int*)malloc(n*sizeof(int));
	fp=fopen("Input.txt","w");
	for(i=0;i<n;i++)
	{
		x[i]=rand()%1000;
		//printf("%d ",x[i]);
		fprintf(fp,"%d ",x[i]);

	}
	start=clock();
	selectionsort(x,n);
	start=clock();
	p=fopen("Output.txt","w");
	for(i=0;i<n;i++)
	{
		fprintf(p,"%d ",x[i]);
	}

	time=((double)(end-start))/CLOCKS_PER_SEC;
	printf("time required is %f.",time);
	fclose(fp);
	fclose(p);
}

